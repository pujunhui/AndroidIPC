<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="60sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="6"
        android:orientation="horizontal"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/start_java_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1.5"
            android:text="Start Java Server"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stop_java_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1.5"
            android:text="Stop Java Server"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/start_java_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="Start Java Client"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stop_java_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="Stop Java Client"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/test_java_loopback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="Test Java Loopback"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/start_native_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1.5"
            android:text="Start Native Server"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stop_native_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1.5"
            android:text="Stop Native Server"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/start_native_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="Start Native Client"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stop_native_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="Stop Native Client"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/test_native_loopback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:text="Test Native Loopback"
            android:textAllCaps="false" />
    </GridLayout>
</LinearLayout>